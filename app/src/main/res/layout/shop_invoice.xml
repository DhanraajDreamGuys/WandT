<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        layout="@layout/toolbar"></include>

    <include
        android:id="@+id/purchased_details"
        layout="@layout/purchase_item_details" />

    <include
        android:id="@+id/purchased_orders_list_item_header_view"
        layout="@layout/purchased_custom_list_item" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_span="2"
        android:background="#ff0099cc" />

    <ListView
        android:id="@+id/purchasedView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <View
        android:id="@+id/v_repo_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ff0099cc" />

    <include
        android:id="@+id/purchased_details"
        layout="@layout/purchased_amt_details" />

</LinearLayout>