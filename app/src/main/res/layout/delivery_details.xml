<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/tool_delivery"
        layout="@layout/toolbar"></include>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView1"
        android:layout_below="@+id/tool_delivery"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text="Shop Details"
                    style="@android:style/Widget.EditText"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/shopWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/shopName"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Shop Name"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/str1Wrapper"
                    android:layout_width="match_parent"
                    android:layout_below="@id/shopWrapper"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/street1"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Street 1"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/str2Wrapper"
                    android:layout_width="match_parent"
                    android:layout_below="@id/str1Wrapper"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/street2"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Street 2"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/townWrapper"
                    android:layout_width="match_parent"
                    android:layout_below="@id/str2Wrapper"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/town"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Town"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/regWrapper"
                    android:layout_width="match_parent"
                    android:layout_below="@id/townWrapper"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/region"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Region"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pinWrapper"
                    android:layout_width="match_parent"
                    android:layout_below="@id/regWrapper"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/pin"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Postcode"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phWrapper"
                    android:layout_width="match_parent"
                    android:layout_below="@id/pinWrapper"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/phone"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone Number"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailWrapper"
                    android:layout_width="match_parent"
                    android:layout_below="@id/phWrapper"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/email"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email ID"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text="Order Details"
                    style="@android:style/Widget.EditText"
                    android:textStyle="bold" />


        </LinearLayout>



    </ScrollView>


</RelativeLayout>